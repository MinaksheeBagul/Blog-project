<%# Add articles listing functionality %>
<h1>Article listing page</h1>

<table>
  <thead>
     <tr>
     <th colspan="1"> Title</th>
     <th colspan="2"> Description</th>
     <th colspan="3"> Actions</th>
     </tr>
  </thead>

 <tbody>
 <%# from controller will make it dynamic calling loop by ruby syntax each entry will display %>
  <% @articles.each do |article| %>
   <tr>
     <td><%= article.title %><td>
     <td><%= article.description %><td>
     <td><%= link_to 'Show', article_path(article) %></td>
     <td><%= link_to 'Edit', edit_article_path(article) %></td>
     <td> <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are u sure ?"} %><td>
   </tr>
   <% end %>
 </tbody>
</table>

<p>
 <%= link_to 'Create new Article', new_article_path %>
</p>